if __name__ == '__main__':
    #调用class():
    spider = ZhiHuSpider()
    
    #调用并判断isLogin():
    if spider.isLogin():
        print('您已经登录')
    else:
        account = input('输入账号：')
        secret = input('输入密码：')
        spider.login(account, secret)
    
    #调用getQsAnswer()：
    spider.getQsAnswer('39162814')
    spider.getQsAnswer('369097579')
